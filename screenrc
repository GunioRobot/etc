# ~/.screenrc

startup_message off
vbell off
altscreen on    # remove risidual editor text
defscrollback 5000

term screen-256color
defbce on   # use current bg colour for erased chars

hardstatus alwayslastline
hardstatus string '%{gk}[ %{G}%H %{g}][%= %{wk}%?%-Lw%?%{=b kR}(%{W}%n*%f %t%?(%u)%?%{=b kR})%{= kw}%?%+Lw%?%?%= %{g}][%{Y}%l%{g}]%{=b C}[ %m/%d %c ]%{W}'
